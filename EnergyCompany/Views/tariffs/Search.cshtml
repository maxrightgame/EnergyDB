@model IEnumerable<EnergyCompany.Models.tariff>

@{
    ViewBag.Title = "Поиск";
}

<h2>Результаты поиска</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Название тарифа")
        </th>
        <th>
            @Html.DisplayName("Дневная расценка")
        </th>
        <th>
            @Html.DisplayName("Ночная расценка")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.day_price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.night_price)
            </td>
            <td>
                @Html.ActionLink("Изменить", "Edit", new { id = item.id }) |
                @Html.ActionLink("Подробнее", "Details", new { id = item.id }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.id })
            </td>
        </tr>
    }

</table>