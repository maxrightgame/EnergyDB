@model IEnumerable<EnergyCompany.Models.bill>

@{
    ViewBag.Title = "Результаты";
}

<h2>Результат запроса</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Счет")
        </th>
        <th>
            @Html.DisplayName("Имя клиента")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.payment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.client.name)
            </td>
        </tr>
    }

</table>
